<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name, {}, :id => "song_genre_id" %>

  <br><br><br>
  <%= f.label "Note 1" %><br>
  <%= f.text_area :note_contents, :name => "song[note_contents][]", :value => "", :id => :song_notes_1 %><br>
  <%= f.label "Note 2" %><br>
  <%= f.text_area :note_contents, :name => "song[note_contents][]", :value => "", :id => :song_notes_2 %><br>
  <%= f.label "Note 3" %><br>
  <%= f.text_area :note_contents, :name => "song[note_contents][]", :value => "", :id => :song_notes_3 %><br>

  <%= f.submit %>
<% end %>


